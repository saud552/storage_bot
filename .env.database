# ========================================
# متغيرات البيئة لقاعدة البيانات
# ========================================

# إعدادات MSSQL
DB_SERVER=localhost
DB_PORT=1433
DB_NAME=TelegramBots
DB_USER=sa
DB_PASS=StrongPassword123!

# إعدادات الاتصال
DB_CONNECTION_STRING=Driver={ODBC Driver 17 for SQL Server};Server=localhost;Database=TelegramBots;UID=sa;PWD=StrongPassword123!;TrustServerCertificate=yes;

# إعدادات تجمع الاتصالات
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=5
DB_COMMAND_TIMEOUT=30
DB_MAX_RETRY_ATTEMPTS=3

# إعدادات Redis (اختياري)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=StrongRedisPassword123!
REDIS_DB=0

# إعدادات النسخ الاحتياطي
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# إعدادات المراقبة
MONITORING_ENABLED=true
METRICS_INTERVAL_SECONDS=60
LOG_LEVEL=INFO

# إعدادات الأمان
ENCRYPTION_ENABLED=true
SSL_ENABLED=true
CERTIFICATE_PATH=/certs

# إعدادات الأداء
QUERY_TIMEOUT_SECONDS=30
MAX_CONCURRENT_CONNECTIONS=100
CONNECTION_POOL_TIMEOUT=300

# إعدادات التنظيف
CLEANUP_ENABLED=true
CLEANUP_INTERVAL_HOURS=24
OLD_MESSAGES_RETENTION_DAYS=90
OLD_EVENTS_RETENTION_DAYS=365

# إعدادات الإحصائيات
STATS_ENABLED=true
STATS_UPDATE_INTERVAL_MINUTES=15
DAILY_STATS_ENABLED=true
MONTHLY_STATS_ENABLED=true

# إعدادات التطبيق
APP_ENVIRONMENT=development
DEBUG_MODE=true
LOG_DATABASE_QUERIES=false